package PageObjects;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;

public class ShareOption  extends NewsPage{
	
	//Constructor
	public ShareOption(WebDriver driver) {
		super(driver);
		// TODO Auto-generated constructor stub
		
		}
	//elements
	@FindBy(xpath="//button[@data-automation-id='shareButton']")
	WebElement sharebtn;
	
	@FindBy(xpath="//span[text()='Share page']/ancestor::ul")
	WebElement shareOptions;
	
	//Actions
	public void clickShareBtn()
    {
        sharebtn.click();

    }
    public String clickShareOptions()
    {
    	return shareOptions.getText();
    }


}
